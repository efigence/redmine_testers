<%= link_to l(:label_link_back), testers_path, class: 'btn btn-xs btn-info pull-right' %>
<h1>Test list</h1>

<div class="row" style="margin-bottom: 2em;">
  <%= form_tag(nil, method: :get, remote: true, onchange: "javascript: this.submit();") do |f| %>
    <div class="col-xs-12">
      <%= label_tag(:q, 'Filter by status') %>
    </div>
    <div class="col-xs-2">
      <%= select_tag 'filter_status', options_for_select(Order::STATUSES.map { |status| [status[1], status[0]] }, params[:filter_status].to_i), include_blank: true, class: 'form-control', id: 'filter_status' %>
    </div>
  <% end %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th><%= l(:label_tab_project) %></th>
      <th>Status</th>
      <th>PM</th>
      <th>Frontend</th>
      <th>Backend</th>
      <th><%= l(:label_tab_estimated_time) %></th>
      <th><%= l(:label_tab_bugs_count) %></th>
    </tr>
  </thead>
  <tbody id="test_list_partial_place">
    <%= render 'test_list_partial' %>
  </tbody>
</table>

<%= will_paginate @orders %>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'bootstrap', :plugin => 'redmine_testers' %>
<% end %>
