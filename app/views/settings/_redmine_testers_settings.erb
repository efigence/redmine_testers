<%= stylesheet_link_tag '/plugin_assets/redmine_hamster/stylesheets/selectize.default.css' %>
<%= javascript_include_tag '/plugin_assets/redmine_hamster/javascripts/selectize' %>
<p>
  <label>Grupy uprawnione do zarządzania zgłoszeniami</label>
    <%= select_tag "settings[managers][]",
      options_from_collection_for_select(Group.all.sort, 'id', 'lastname', @settings['managers']
        ), :multiple => true, class: "selectize" %>

</p>
<p>
  <label>Grupy uprawnione do wysyłania zgłoszeń</label>
    <%= select_tag "settings[senders][]",
      options_from_collection_for_select(Group.all.sort, 'id', 'lastname', @settings['senders']
        ), :multiple => true, class: "selectize" %>

</p>
<p>
  <label>Powiadom, gdy pojawi się nowe zgłoszenie: </label>
    <%= select_tag "settings[notifiers][]",
      options_from_collection_for_select(User.active, 'id', 'name', @settings['notifiers']
        ), :multiple => true, class: "selectize" %>

</p>
<p>
  <label>Osoby uprawnione do zarządzania zgłoszenia</label>
    <%= select_tag "settings[editors][]",
      options_from_collection_for_select(User.active, 'id', 'name', @settings['editors']
        ), :multiple => true, class: "selectize" %>

</p>
<style>
  div.box {
    overflow: initial;
  }
</style>
<script type="text/javascript">
  $(document).ready(function(){
    $('.selectize').selectize({
      plugins: ['remove_button']
    });
  });
</script>